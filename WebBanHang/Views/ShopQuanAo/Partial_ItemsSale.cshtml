@model IEnumerable<WebBanHang.Models.SanPham>
@using WebBanHang.Common

@if (Model != null && Model.Any())
{
    <div class="best_sellers" style="width:1110px;">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title new_arrivals_title" style="margin-top:0;">
                        <h2>Best Sellers</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="product_slider_container">
                        <div class="owl-carousel owl-theme product_slider">
                            @foreach (var item in Model)
                            {
                                <div class="owl-item product_slider_item">
                                    <div class="product-item" style="width:auto">
                                        <a href="@Url.Action("Details","ShopQuanAo",new {id=item.MaSP})">
                                            <div class="product discount">
                                                <div class="product_image" style=" display: flex; justify-content: center;">
                                                    <img style="width: 190px; height: 190px; margin-top: 20px;" src="/@item.AnhBia" alt="">
                                                </div>
                                                <div class="favorite favorite_left"></div>
                                                <div class="product_bubble product_bubble_right product_bubble_green d-flex flex-column align-items-center"><span>Sell</span></div>
                                                <div class="product_info" style="margin-top:0">
                                                    <h6 class="product_name"><a href="single.html">@item.TenSP</a></h6>
                                                    @if (item.GiaKhuyenMai > 0)
                                                    {
                                                        <div class="product_price">@Common.FormatNumber(item.GiaKhuyenMai, 0)<span>@Common.FormatNumber(item.GiaBan, 0)</span></div>
                                                    }
                                                    else
                                                    {
                                                        <div class="product_price">@Common.FormatNumber(item.GiaBan, 0)</div>
                                                    }
                                                </div>
                                                <h6 class="product_name" style="height:40px;margin-top:10px">Lượt mua: @item.LuotMua</h6>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Slider Navigation -->

                        <div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
                            <i class="fa-solid fa-caret-left" aria-hidden="true"></i>
                        </div>
                        <div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
                            <i class="fa-solid fa-caret-right" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}