<script>
    var slider = document.querySelector(".main_slider");
    var currentIndex = 0;
    var backgrounds = [
        "/images/quangcao/ColoShop.png",
        "/images/quangcao/ColoShop2.png",
        "/images/quangcao/ColoShop3.png",
        "/images/quangcao/ColoShop4.png",
        "/images/quangcao/ColoShop5.png"
    ];

    slider.addEventListener("click", function (event) {
        if (event.clientX > window.innerWidth / 2) {
            // Bấm vào bên phải, chuyển sang nền tiếp theo
            currentIndex = (currentIndex + 1) % backgrounds.length;
        } else {
            // Bấm vào bên trái, trở về nền trước đó
            currentIndex = (currentIndex - 1 + backgrounds.length) % backgrounds.length;
        }
        slider.style.backgroundImage = "url(" + backgrounds[currentIndex] + ")";
    });

    function changeBackground() {
        currentIndex = (currentIndex + 1) % backgrounds.length;
        slider.style.backgroundImage = "url(" + backgrounds[currentIndex] + ")";
    }

    setInterval(changeBackground, 10000);
</script>